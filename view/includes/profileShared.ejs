<div class="max-w-sm sm:max-w-xs bg-white rounded shadow-lg">
  <div class="h-56">
    <% if(profile.photo){ %>
    <img
      class="w-full h-full object-cover"
      title="<%= profile.firstName %>"
      src="<%= profile.photo %>"
      alt="profile picture"
    />
    <% } else { %>
    <img
      class="w-full h-full object-cover"
      title="<%= profile.firstName %> <%= profile.lastName %>"
      src="../../static/user.svg"
      alt="profile picture"
    />
    <%}%>
  </div>
  <div class="px-6 py-4">
    <div class="text-xl font-bold mb-1 flex justify-between">
      <span class="inline-block"><%= profile.firstName %> <%= profile.lastName %></span>
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700">SS3A</span>
    </div>
    <p class="mb-1 font-mono text-center">
       Class of <%= profile.year %>
    </p>
    <p class="mb-1">
      <span class="text-gray-600">Nickname:</span> <%= profile.nickname %>
    </p>
    <p class="mb-1">
      <span class="text-gray-600">Lives in ğŸ¡:</span> Abuja, Nigeria
    </p>
    
    
  </div>
</div>
